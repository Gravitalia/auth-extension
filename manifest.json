{
  "name": "Decentralized Gravitalia Account",
  "short_name": "GravitaliaAccount",
  "categories": ["productivity", "business"],
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "Identity delegation without central authority using Gravitalia protocol.",
  "homepage_url": "https://github.com/Gravitalia/auth-extension",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "cookies",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://account.gravitalia.com/"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'"
}
